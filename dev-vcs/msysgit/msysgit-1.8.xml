                                               RegistryView="Registry64"
                                               RegistryHive="ClassesRoot"
                                               Key=".gitattributes"
                                               Data="txtfile" />
      <MSBuild.ExtensionPack.Computer.Registry TaskAction="Set"
                                               RegistryView="Registry64"
                                               RegistryHive="ClassesRoot"
                                               Key=".gitattributes"
                                               Value="Content Type"
                                               Data="text/plain" />
      <MSBuild.ExtensionPack.Computer.Registry TaskAction="Set"
                                               RegistryView="Registry64"
                                               RegistryHive="ClassesRoot"
                                               Key=".gitattributes"
                                               Value="PerceivedType"
                                               Data="text" />
      <MSBuild.ExtensionPack.Computer.Registry TaskAction="CreateKey"
